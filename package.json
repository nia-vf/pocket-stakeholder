{
  "name": "pocket-stakeholder",
  "version": "0.1.0",
  "description": "A virtual feature team in your pocket - simulates stakeholder roles to help solo developers transform ideas into production-ready applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "pocket-stakeholder": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "cli",
    "developer-tools",
    "llm",
    "architecture",
    "stakeholder",
    "adr"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.0",
    "commander": "^12.0.0",
    "inquirer": "^9.2.0",
    "chalk": "^5.3.0"
  }
}
